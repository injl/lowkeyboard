<?xml version="1.0" encoding="utf-8"?>

<!--
DESCRIPTION:
This keyboard mode is exclusively for
uppercase alphabetical characters.
-->

<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
        android:keyWidth="30%p"
        android:horizontalGap="0px"
        android:verticalGap="0px"
        android:keyHeight="80dp" >

        <!-- Row 1 -->
        <Row android:rowEdgeFlags="top">
            <!-- Contains: ? -->
            <Key
                android:codes="063"
                android:keyLabel="\?"
                android:keyEdgeFlags="left" />
            <!-- Contains: A, B, C -->
            <Key
                android:codes="065"
                android:keyLabel="ABC"
                android:popupKeyboard="@xml/popup_menu"
                android:popupCharacters="ABC" />
            <!-- Contains: D, E, F -->
            <Key
                android:codes="068"
                android:keyLabel="DEF"
                android:popupKeyboard="@xml/popup_menu"
                android:popupCharacters="DEF" />
            <!-- Contains: Comma symbol -->
            <Key
                android:codes="44"
                android:keyLabel=","
                android:keyWidth="20%p"
                android:keyEdgeFlags="right" />
        </Row>

        <!-- Row 2 -->
        <Row>
            <!-- Contains: G, H, I -->
            <Key
                android:codes="071"
                android:keyLabel="GHI"
                android:popupKeyboard="@xml/popup_menu"
                android:popupCharacters="GHI"
                android:keyEdgeFlags="left" />
            <!-- Contains: J, K, L  -->
            <Key
                android:codes="074"
                android:keyLabel="JKL"
                android:popupKeyboard="@xml/popup_menu"
                android:popupCharacters="JKL" />
            <!-- Contains: M, N, O -->
            <Key
                android:codes="077"
                android:keyLabel="MNO"
                android:popupKeyboard="@xml/popup_menu"
                android:popupCharacters="MNO" />
            <!-- Contains: Period symbol -->
            <Key
                android:codes="46"
                android:keyLabel="."
                android:keyWidth="20%p"
                android:keyEdgeFlags="right" />
        </Row>

        <!-- Row 3 -->
        <Row>
            <!-- Contains: P, Q, R, S -->
            <Key
                android:codes="080"
                android:keyLabel="PQRS"
                android:popupKeyboard="@xml/popup_menu"
                android:popupCharacters="PQRS"
                android:keyEdgeFlags="left" />
            <!-- Contains: T, U, V  -->
            <Key
                android:codes="084"
                android:keyLabel="TUV"
                android:popupKeyboard="@xml/popup_menu"
                android:popupCharacters="TUV" />
            <!-- Contains: W, X, Y, Z -->
            <Key
                android:codes="087"
                android:keyLabel="WXYZ"
                android:popupKeyboard="@xml/popup_menu"
                android:popupCharacters="WXYZ" />
            <!-- Contains: DELETE action -->
            <Key
                android:codes="-5"
                android:keyLabel="⌫"
                android:keyWidth="20%p"
                android:isRepeatable="true"
                android:keyEdgeFlags="right" />
        </Row>

        <!-- Row 4 -->
        <Row android:rowEdgeFlags="bottom">
            <!-- Contains: MODE action -->
            <Key
                android:codes="1000"
                android:keyLabel="☏"
                android:keyWidth="28%p"
                android:keyEdgeFlags="left" />
            <!-- Contains: Space bar (takes up two keys)  -->
            <Key
                android:codes="32"
                android:keyWidth="54%p"
                android:keyLabel="" />
            <!-- Contains: ENTER action -->
            <Key
                android:codes="-5"
                android:keyLabel="↩"
                android:keyWidth="18%p"
                android:isRepeatable="true"
                android:keyEdgeFlags="right" />
        </Row>
</Keyboard>